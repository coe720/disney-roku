<?xml version="1.0" encoding="UTF-8"?>

<component name="HomeScreen" extends="Group" initialFocus="RowList">
    <script type="text/brightscript" uri="HomeScreen.brs" />
	 <interface>
        <field id="content" type="node" alias="RowList.content" />
        <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="RowList.rowItemSelected" />
        <field id="jumpToRowItem" type="intarray" alias="RowList.jumpToRowItem" />
    </interface>
    <children>
        <RowList
            itemComponentName="HomeTile"
            id="rowList"
            translation="[80,80]"
            numRows="5"
            rowitemSize="[[320,180]]"
            rowItemSpacing="[[20,0]]"
            itemSize="[1500,270]"
            rowLabelOffset="[[50,20]]"
            focusXOffset="[50]"
            showRowLabel="[true]"
            rowFocusAnimationStyle="floatingfocus"
            drawFocusFeedback="false"
        />
    </children>
</component>
